.release_activity{
  background: #F8F8F8;
}
.release_area .release_pic{
  background: #B0DFE5;
  height: 136px;
  text-align: center;
}
.release_area .add_pic{
  width: 60px;
  height: 60px;
  border-radius: 60px;
  background: #fff;
  margin:0 auto;
  position: relative;
  top: 20px;
}
.release_area span.title{
  font-size: 16px;
  padding-top: 30px;
}
.release_area span.title,
.release_area span.tips,
.release_area span.tips_2{
  display: block;
}
.release_area span.tips,
.release_area span.tips_2{
  color: #1E91D1;
}
.release_area span.tips_2{
  font-size: 10px;
}
.add_pic>span{
  color: #619DBD;
  font-size: 20px;
  font-weight: bold;
  position: absolute;
  top: 18px;
  left: 20px;
}
.release_text input,
.release_detail input{
  font-size: 14px;
  width: 100%;
  height: 45px;
  border-bottom: 1px solid #F0F0F0;
  padding-left: 8%;
}
.release_detail input{
  border-top: 1px solid #F0F0F0;
}
.release_detail_1,
.release_detail_2,
.add_info_btn,
.release_post{
  margin-top: 20px;
}
.release_text .input_a,
.release_detail .input_a{
  position: relative;
}
.release_text .input_a>span,
.release_detail .input_a>span{
  position: absolute;
  top: 14px;
  left: 3%;
}
.add_info_btn{
  height: 45px;
  text-align: center;
  background: #fff;
  padding: 3%;
}
.add_info_btn>span.icon-cog{
  font-size: 16px;
  font-weight: bold;
  color: #22AE6F;
  padding: 2%;
}
.release_post{
  background: #B0DFE5;
  height: 45px;
  text-align: center;
  padding: 2%;
}
.release_post a{
  display: block;
  font-size: 18px;
  color: #333;
}

/*show*/
.marketing{
  background: #f8f8f8;
}
.mar_head,.mar_detail,.mar_img{
  background: #fff;
  margin-bottom: 10px;
}
.mar_img>img{
  width: 100%;
}
.mar_head .mar_pic>img{
  height: 200px;
  width: 100%;
}
.mar_title>p,.mar_detail>p{
  padding: 3%;
  font-size: 14px;
}
.mar_detail>p{
  border-top: 1px solid #ccc;
}
.mar_detail>p:last-child{
  border-bottom: 1px solid #ccc;
}
.mar_detail>p.phone{
  color: #0280BB;
}
.mar_footer{
  background: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
  box-shadow: 0 1px 3px rgba(0,1,2,0.5);
  height: 60px;
}
.mar_footer .sign_up{
  background: #E65F50;
  width: 60px;
  height: 60px;
  border-radius: 60px;
  position: absolute;
  top: -20px;
  left: 42%;
}
.mar_footer .sign_up_btn{
  background: #0280BB;
  padding: 2%;
  position: absolute;
  right: 2%;
  top: 15%;
}
.mar_footer .sign_up_btn a{
  color: #fff;
}
.mar_footer .sign_up{
  text-align: center;
}
.mar_footer .sign_up a span{
  display: block;
  color: #fff;
  padding-top: 5px;
}
.mar_footer span.sign_up_num{
  position: absolute;
  left: 5%;
  top: 30%;
}