* {
  margin: 0;
  padding: 0;
  border: 0;
  outline: 0;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
input, ul, li {
  list-style-type: none;
}
input{
  vertical-align:middle;
  margin-top: -1px;
}
html {
  -webkit-text-size-adjust: 100%;
  font-family: "Microsoft YaHei";
  color: #333;
  word-break: break-all;
  font-size: 14px;
  line-height: 1.5;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  height: 100% !important;
}

.fl { float: left; }
.fr { float: right; }
.mt20 { margin-top: 20px;}
.mt10 { margin-top: 10px;}
.mb20 { margin-bottom: 20px;}
.mb10 { margin-bottom: 10px;}
.line {
  width: 100%;
  height: 1px;
  background-color: #d9d9d9;
}
.clearfix:before, .clearfix:after{
  content:"";
  display:block;
}
.clearfix:after{
  clear:both;
}
.clearfix{zoom:1;}
.clearfix{
  margin-bottom: 20px;
}
a {
  color: #337ab7;
  text-decoration: none;
}
a:hover {
  color: #23527c;
}
.notice{
  text-align: right;
  color: red;
  font-size: 8px;
}
.headline{
  font-size: 16px;
  height: 34px;
  text-align: center;
  line-height: 32px;
  background: #1B83D3;
  color: #fff;
  font-weight: bold;
}
p{
  font-size: 14px;
  margin-bottom: 5px;
}
p>span{
  color: red;
}
.tac { text-align: center;}


.md_card {
  margin: 2%;
}
.md_box { margin: 3%;}

body{
  position: relative;
}

.box_text{
  position: relative;
}

.box_text .text{
  padding-left: 10px;
  width: 100%;
  height: 36px;
  line-height: 36px;
  border: 1px solid #aaa;
  border-radius: 3px;
  font-size: 100%;
  background: #fafafa;
  text-align: left;
}
.mb21>input,.mb20>select{
  padding-left: 10px;
  width: 100%;
  border: 1px solid #aaa;
  border-radius: 3px;
  font-size: 100%;
  background: #fafafa;

  color: gray;
}
.mb21>input{
  height: 100px;
  margin-bottom: 20px;
}
.mb20>select{height: 32px;}
.code {
  width: 65%;
  display: inline-block;
}
.sms-code {
  width: 30%;
  margin-left: 3%;
  display: inline-block;
  height: 36px;
  background: #e6ebed;
  vertical-align: middle;
  text-align: center;
  border-radius: 3px;
  padding-top: 5px;
}
.sms-code .confirm_a {
  width: 100%;
  color: #526069;
  background-color: #e6ebed;
  border-radius: 3px;
}
.sms-code .confirm_a:hover {
  color:#526069;
  background-color:#c8d3d8;
}
div.confirm_area button.confirm_a {
  width: 100%;
  height: 36px;
  line-height: 36px;
  text-shadow: -1px -1px 0 rgba(0,0,0,0.3);
  text-align: center;
  font-size: 16px;
  color: #ffffff;
  border: 1px;
  border-radius: 3px;
  border-color: #f66d60 #e74c3c #c83f31 #e74c3c;
  background: #1B83D3;
}


/* 错误提示 */
.error-border-red { border-color: #ff4f3e!important; }
.error-block {
  margin:  -10px 0 10px 0;
}
.error-block-message {
  text-align: left;
  color: #F74555;
}
.error.icon-info {
  position: relative;
  top: 1px;
  margin-right: 2px;
  color: #F74555;
}
.error.icon-cancel-circle {
  position: absolute;
  z-index: 1;
  right: 10px;
  top: 8px;
  font-size: 18px;
  color: #CCC;
  cursor: pointer;
}

.content{
  padding:40px 0 60px;
}


/* 个人中心 */
.myhome {
  background: #ededed;
}

.myhome .introduce{
  font-size: 14px;
  font-weight: normal;
}

.myhome_top {
  padding: 10px 15px;
  background: #fff;
}
.myhome_top .info-avatar img{
  float: left;
  margin-right: 15px;
  width: 60px;
  height: 60px;
  border-radius: 30px;
}
.myhome_top .info-items {
  margin-right: 95px;
}
.myhome_top .info-name {
  font-size: 18px;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.myhome_top .info-desc {
  display: inline-block;
  max-width: 100%;
  color: grey;
  margin-top: 6px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.myhome_top a{
  color: #000;
}

.myhome_con {
  margin:10px 0;
}

.myhome .my_image{
  width: 60px;
  height: 60px;
}

.user_slist {
  width: 100%;
  background: #fff;
}
.user_slist ul {
}
.user_slist li {
  padding: 10px 20px;
  border-bottom:1px solid #ddd;
  width: 100%;
}
.user_slist li:last-child {
  border-bottom:1px solid #ddd;
}
.user_slist li a {
  margin-left: 12px;

}

.my_group_title span,.user_slist li span.icon-chevron-thin-right {
  float: right;
  position: relative;
  top: 4px;
  right: -10px;
  color: #bbb;
}

/*头部及底部*/
.header{
  line-height: 32px;
  font-size: 16px;
  background: #1B83D3;
  height: 36px;
  text-align: center;
  text-indent: -52px;
  position: fixed;
  z-index: 999;
  width:100%;
  top:0;
}
.header.logout{
  float: right;
  color: #ffffff;
  text-indent: -36px;
}
.header>.return{
  color: #fff;
  padding-left: 20px;
  font-size: 16px;
  float: left;
  text-indent: 0;
}

.common_modal {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 9999;
  z-index: 9999;
  display: none;
}

.common_modal .modal_tip_content {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 90%;
  background: #fff;
  border-radius: 5px;
  box-shadow: 1px 1px 1px rgba(0,0,0,0.8);
  -webkit-transform: translate(-50%,-50%);
  -moz-transform: translate(-50%,-50%);
  -ms-transform: translate(-50%,-50%);
  -o-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
}

.menu{
  z-index: 999;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 60px;
  border-top: 1px solid #ccc;
}
.menu>a{
  color: #1B83D3;
  width: 20%;
  line-height: 34px;
  position: fixed;
  bottom: 0;
  text-align: center;
}

.menu>.control-1{
  left: 0%;
  background: #fff url(<%=asset_url('top.png')%>) no-repeat;
  background-size:20px 20px;
  background-position: top center;
  padding-top: 20px;
}
.menu>.control-2{
  left: 20%;
  background: #fff url(<%=asset_url('nearby.png')%>) no-repeat;
  background-size:20px 20px;
  background-position: top center;
  padding-top: 20px;
}
.menu>.control-3{
  left: 40%;
  background: #fff url(<%=asset_url('fitment.png')%>) no-repeat;
  background-size:20px 20px;
  background-position: top center;
  padding-top: 20px;
}
.menu>.control-4{
  left: 60%;
  background: #fff url(<%=asset_url('material.png')%>) no-repeat;
  background-size:20px 20px;
  background-position: top center;
  padding-top: 20px;
}
.menu>.control-5{
  left: 80%;
  background: #fff url(<%=asset_url('my.png')%>) no-repeat;
  background-size:20px 20px;
  background-position: top center;
  padding-top: 20px;
}


div.confirm_area>span,a.theme_submit {
  width: 100%;
  height: 36px;
  line-height: 36px;
  text-shadow: -1px -1px 0 rgba(0,0,0,0.3);
  text-align: center;
  font-size: 16px;
  color: #ffffff;
  border: 1px;
  border-radius: 3px;
  border-color: #f66d60 #e74c3c #c83f31 #e74c3c;
  background: #1B83D3;
}
div.confirm_area>span{
  display: block;
}


.common_modal .btn_close{
  position: absolute;
  right: -10px;
  top: -10px;
  width: 28px;
  height: 28px;
  text-align: center;
  font-size: 20px;
  line-height: 24px;
  background: #fff;
  color: #333;
  border: 1px solid #e8e8e8;
  border-radius: 14px;
}
.common_modal .text_center{
  text-align: center;
}

/*model_address*/
#model_address{
  min-height: 150px;
  padding: 10px;
  position: relative;
  display: none;
}
#model_address > div{
  width: 100%;
  margin: 5px 0;
}
#model_address > div > select{
  text-align: center;
  height: 30px;
  line-height: 30px;
  width: 32%;
}
#model_address > div > input{
  width: 100%;
  height: 30px;
  line-height: 30px;
  background: #efefef;
  padding: 0 2%;
}

/*model_join_activity*/
#model_join_activity{
  min-height: 250px;
  padding: 10px;
  position: relative;
  display: none;
}
#model_join_activity form input{
  width: 100%;
  padding: 0 2%;
  height: 30px;
  line-height: 30px;
  background: #e8e8e8;
}
#model_join_activity input.btn_submit,
#model_join_activity input.btn_cancel{
  width: 45%;
  border-radius: 5px;
  color: #fff;
  font-size: 14px;
}
#model_join_activity input.btn_submit{
  background: #1B83D3;
  margin-right: 5%;
}
#model_join_activity input.btn_cancel{
  background: #d00;
}


/*model_message*/
#model_message {
  min-height: 150px;
  padding: 10px;
  position: relative;
  display: none;
}
#model_message > div{
  width: 100%;
  font-size: 16px;
}
#model_message .title{
  font-size: 18px;
  margin-top: 10px;
}
#model_message .msg_close{
  border-top: 1px solid #eee;
  padding: 10px;
  position: absolute;
  width: 100%;
  bottom: -5px;
  margin-left: -10px;
  color: #1B83D3;
}


