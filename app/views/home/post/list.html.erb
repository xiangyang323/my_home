<div class="md_card">
  <div class="md_box">
    <div class="post_new">
      <div class="post_btn">
        <%= link_to "发布新案例", home_post_new_path%>
      </div>
      <div class="post_brand">
        <p class="post_brand_title">品牌：</p>
        <form>
          <ul class="clearfix">
            <li><span><input type="checkbox" id="check1" value="" name="">
                <label for="check1">品牌</label></span></li>
            <li><span><input type="checkbox" id="check2" value="" name="">
                <label for="check2">品牌</label></span></li>
            <li><span><input type="checkbox" id="check3" value="" name="">
                <label for="check3">品牌</label></span></li>
          </ul>
          <ul class="clearfix">
            <li><span><input type="checkbox" id="check4" value="" name="">
                <label for="check4">品牌aaaaaaaaaaaa</label></span></li>
            <li><span><input type="checkbox" id="check5" value="" name="">
                <label for="check5">品牌aaaaaaaaaaaa</label></span></li>
            <li><span><input type="checkbox" id="check6" value="" name="">
                <label for="check6">品牌aaaaaaaaaaaa</label></span></li>
          </ul>
          <div class="state">
            <span>状态：</span>
            <%=link_to "已完成", {controller: "/home/post", action: :list, flag: Post::PUB_FLAG}, {method: :post}%>
            <span class="state_a active"></span>
            <span class="state_b">草稿</span>
          </div>
        </form>
      </div>
    </div>
    <%@posts.each do |post|%>
        <div class="post_info">
          <div class="post_detail clearfix">
            <div class="post_pic" onclick="window.location.href='<%=post_path(post)%>'">
              <%=image_tag post.get_init_img%>
              <span>共<%=post.get_total_img%>张</span>
            </div>
            <div class="post_title">
              <span class="pic_title"><%=link_to post.title, post_path(post)%></span>
              <span class="post_time"><%=post.updated_at.to_s()%></span>
            </div>
            <div class="post_sub">
              <%#=show_post_btn(post)%>
              <%=link_to "编辑", home_post_edit_path(post)%>
              <%=link_to "删除", home_post_delete_path(post), {method: :delete, data: {confirm: "确定删除?"},}%>
            </div>
          </div>
        </div>
    <%end%>
  </div>
</div>