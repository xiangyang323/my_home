<div class="md_card" xmlns="http://www.w3.org/1999/html">
  <div class="md_box">
    <%=form_for :session, url: signin_path, method: "post", html: {id: "signinForm"} do |f|%>
    <div class="box_text mb20">
      <%=f.text_field :phone, class: "text", placeholder: "输入手机号"%>
    </div>

    <div class="box_text code mb20">
      <%=f.text_field :verification_code, autocomplete: "off", class: "text"%>
    </div>
    <div class="sms-code">
      <span class="confirm_a" onclick="getVerificationCode()" time="60" id="verification_code_btn">获得验证码</span>
    </div>
    <div class="box_text mb20">
      <%= f.password_field :password, class: "text", placeholder: "密码（字母，数字，至少6位）"%>
    </div>
    <div class="box_text mb20">
      <%= f.password_field :password_confirmation,class: "text", placeholder: "再次输入密码" %>
    </div>
    <div class="confirm_area">
      <button type="submit" class="confirm_a">注册</button>
    </div>
    <%end%>
    <div class="line"></div>
    <div class="mt20 tec">
      已有帐号？<%= link_to "立即登陆", login_path %>
    </div>
  </div>
</div>


<%=flash[:notice] if !params[:session].blank?%>