<div class="md_card">
  <div class="md_box">
    <%=form_for :session, url: forget_password_path, method: "post" do |f|%>
    <div class="box_text mb20">
      <%=f.text_field :phone, class: "text", placeholder: "输入手机号", size: "30"%>
    </div>
    <!--账号输入为空时-->
    <!--<div class="error-block">
      <span class="icon icon-warning"></span><span class="error-block-message">请输入邮箱或手机号码</span>
    </div>-->
    <!--账号输入错误时-->
    <!--<div class="error-block">
      <span class="icon icon-warning"></span><span class="error-block-message">请输入正确的邮箱或手机号码</span>
    </div>-->
    <div class="box_text code mb20">
      <%=f.text_field :verification_code, autocomplete: "off", class: "text"%>
    </div>
    <div class="sms-code">
      <span class="confirm_a" onclick="getVerificationCode()" time="60" id="verification_code_btn">获得验证码</span>
    </div>
    <!--验证码未输入时-->
    <!--<div class="error-block">
      <span class="icon icon-warning"></span><span class="error-block-message">请输入验证码</span>
    </div>-->
    <!--验证码输入有误时-->
    <!--<div class="error-block">
     <span class="icon icon-warning"></span><span class="error-block-message">请输入正确的验证码</span>
   </div>-->

    <div class="box_text mb20">
      <%= f.password_field :password, autocomplete: "off", class: "text", placeholder: "新密码"%>
    </div>

    <div class="box_text mb20">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "text", placeholder: "再次输入密码"%>
    </div>
    <!--新密码输入为空时-->
    <!--<div class="error-block">
      <span class="icon icon-warning"></span><span class="error-block-message">请输入新密码</span>
    </div>-->
    <!--确认密码输入为空时-->
    <!--<div class="error-block">
      <span class="icon icon-warning"></span><span class="error-block-message">请输入确认密码</span>
    </div>-->
    <!--密码输入不一致时-->
    <!--<div class="error-block">
      <span class="icon icon-warning"></span><span class="error-block-message">密码输入不一致</span>
    </div>-->
    <!--密码输入超长时-->
    <!--<div class="error-block">
      <span class="icon icon-warning"></span><span class="error-block-message">请输入20字符以内密码</span>
    </div>-->
    <div class="confirm_area">
      <span class="confirm_a" onclick="submitSignIn()">重置密码</span>
    </div>
    <%end%>
  </div>
</div>

<%=flash[:notice] if !params[:session].blank?%>